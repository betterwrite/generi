{
  "name": "generi",
  "version": "1.2.1",
  "description": "A Simple CHANGELOG.md Generator",
  "repository": {
    "type": "git",
    "url": "https://github.com/betterwrite/generi"
  },
  "bugs": {
    "url": "https://github.com/betterwrite/generi/issues"
  },
  "homepage": "https://github.com/betterwrite/generi/",
  "author": "Giovane Cardoso",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "dist/index.js",
  "files": [
    "dist/**/*",
    "package.json",
    "LICENSE"
  ],
  "keywords": [
    "changelog",
    "git",
    "publish",
    "monorepo",
    "lerna",
    "cli"
  ],
  "scripts": {
    "dev": "pnpm build && node .",
    "build": "tsdown src/index.ts --minify --clean",
    "build:watch": "tsdown src/index.ts --minify --clean --watch",
    "test": "vitest run --coverage",
    "test:dev": "vitest",
    "format": "prettier --write src/ tests/",
    "prepublishOnly": "pnpm build"
  },
  "bin": {
    "generi": "dist/index.js"
  },
  "dependencies": {
    "consola": "^3.4.2",
    "destr": "^2.0.5",
    "execa": "^5.1.1",
    "gradient-string": "^3.0.0",
    "sade": "^1.8.1"
  },
  "devDependencies": {
    "@types/gradient-string": "^1.1.6",
    "@types/node": "^24.9.1",
    "@types/sade": "^1.8.0",
    "@vitest/coverage-v8": "3.2.4",
    "prettier": "^3.6.2",
    "tsdown": "^0.15.9",
    "typescript": "^5.9.3",
    "vite": "^7.1.11",
    "vitest": "^3.2.4"
  }
}
