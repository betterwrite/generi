{
  "name": "generi",
  "version": "1.2.1",
  "description": "A Simple CHANGELOG.md Generator",
  "repository": {
    "type": "git",
    "url": "https://github.com/betterwrite/generi"
  },
  "bugs": {
    "url": "https://github.com/betterwrite/generi/issues"
  },
  "homepage": "https://github.com/betterwrite/generi/",
  "author": "novout",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "files": [
    "dist/**/*",
    "package.json",
    "LICENSE"
  ],
  "keywords": [
    "changelog",
    "git",
    "publish",
    "monorepo",
    "lerna",
    "cli"
  ],
  "scripts": {
    "dev": "pnpm build && node .",
    "build": "tsup src/index.ts --minify --clean",
    "build:watch": "tsup src/index.ts --minify --clean --watch",
    "test": "vitest run --coverage",
    "test:dev": "vitest",
    "format": "prettier --write src/ tests/",
    "prepublishOnly": "pnpm build"
  },
  "bin": {
    "generi": "dist/index.js"
  },
  "dependencies": {
    "consola": "^3.4.2",
    "destr": "^2.0.5",
    "execa": "^5.1.1",
    "gradient-string": "^3.0.0",
    "sade": "^1.8.1"
  },
  "devDependencies": {
    "@types/gradient-string": "^1.1.2",
    "@types/node": "^18.15.11",
    "@types/sade": "^1.7.4",
    "@vitest/coverage-c8": "^0.25.8",
    "prettier": "^2.8.7",
    "rimraf": "^3.0.2",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4",
    "vite": "^4.2.1",
    "vitest": "^0.30.1"
  }
}